<Page x:Class="Практика4_Анисимов_Кошелева.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практика4_Анисимов_Кошелева.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2" Background="#FFB3C5D9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image HorizontalAlignment="Center" Source="/Images/Zadan2.png" Margin="0,100,0,0"  Width="400" ToolTip="Формула" Grid.ColumnSpan="2"/>

        <TextBlock  Text="x"  Grid.Row="1" HorizontalAlignment="Right"/>
        <TextBox   x:Name="x" Grid.Row="1" PreviewTextInput="TextBox_OnPreviewTextInput" ToolTip="Введите значение" Width="50" Height="20" Grid.Column="1" HorizontalAlignment="Left"/>



        <TextBlock    Text="m" Grid.Row="2" HorizontalAlignment="Right"/>
        <TextBox    Grid.Row="2" Grid.Column="1" x:Name="m"  PreviewTextInput="TextBox_OnPreviewTextInput" ToolTip="Введите значение" Width="50" Height="20" HorizontalAlignment="Left"/>


        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" ToolTip="Выберите вариант расчёта функции">
            <RadioButton Name="ShFunctionRadio" Content="sh(x) - гиперболический синус" 
                             Margin="5" GroupName="FunctionGroup" IsChecked="True"/>
            <RadioButton Name="SquareFunctionRadio" Content="x²" 
                             Margin="5" GroupName="FunctionGroup"/>
            <RadioButton Name="ExpFunctionRadio" Content="eˣ" 
                             Margin="5" GroupName="FunctionGroup"/>
        </StackPanel>


        <Button Content="Вычислить"    Click="Button_Click" ToolTip="Нажмите" Grid.Row="4" Grid.Column="0" Width="100" HorizontalAlignment="Right"/>
        <Button Content="Очистить"    Click="Button_Click_1" ToolTip="Нажмите" Grid.Row="4" Grid.Column="1" Width="100" HorizontalAlignment="Left"/>


        <TextBlock    Text="Ответ:" VerticalAlignment="Top"  Grid.Row="5" Grid.Column="0"  HorizontalAlignment="Right"/>
        <TextBox    x:Name="Answer"  VerticalAlignment="Top" IsEnabled="False" ToolTip="Результат вычислений" Grid.Row="5" Grid.Column="1" Width="100" HorizontalAlignment="Left"/>

    </Grid>
</Page>
